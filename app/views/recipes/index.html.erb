<h1>Recipes</h1>

<% if @message %>
  <h2><%= @message %></h2>
<% end %>

<ul>
  <% @recipes.each do |recipe| %>
    <li>
      <a href="<%= @parent_path %>/recipes/<%= recipe.id %>"><%= recipe.name %></a>
      <a href="<%= @parent_path %>/recipes/<%= recipe.id %>/edit"><button>Edit</button></a>
      <%= form_tag "#{@parent_path}/recipes/#{recipe.id}", {method: "delete", style: "display: inline;"} do %>
        <button type="submit">Delete</button>
      <% end %>
    </li>
  <% end %>
</ul>

<a href="<%= @parent_resource %>">Back</a>
